{
  "urls": "http://localhost:5000/", // do not forget a trailing slash
  "Properties": {
    "Application": "IdentityServer.Host.Ng"
  },
  "TokenCertificates": {
    "UseLocalCertStore": "false",
    "SigningPfx": "token_signing.pfx",
    "ValidationPfx": "token_validation.pfx",
    "PfxPassword": "f1cfe113-66bb-47ff-8488-0933e35fe3c4",
    "SigningThumbprint": "6722676EA36E752187F75222ABA4DF351156214E",
    "ValidationThumbprint": "C98F69A77A392BA07BC61B0CE75AC2ED4DAFEC7E"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowAll": true,
    "Origins": []
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      "Microsoft": "Warning",
      "IdentityServer": "Warning"
    }
  },
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "ApiKey": ""
  },
  "Serilog": {
    // Verbose (Trace), Debug, Information, Warning, Error, Fatal (Critical)
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IdentityServer": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "File" },
            { "Name": "ApplicationInsightsTraces" }
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "IdentityServer.Host.Ng_.json",
          "rollingInterval": "Day", // Infinite, Year, Month, Day, Hour, Minute
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter,  Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "ApplicationInsightsTraces",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "instrumentationKey": ""
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
